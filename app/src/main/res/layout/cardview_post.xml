<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageViewPostCard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/textViewTitlePostCad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo del juego "
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="16dp"
            android:maxLines="1"
            android:textColor="@color/colorDarckBlue"/>
        <TextView
            android:id="@+id/textViewUserNamePostCad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de Usuario "
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="13dp"
            android:maxLines="1"
            android:textStyle="italic"
            android:textColor="@color/red"/>
<TextView
    android:id="@+id/textViewDescripcionPostCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Descripcion del Juego..."
    android:layout_margin="10dp"
    android:maxLines="2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"

            >
            <ImageView
                android:id="@+id/imageViewLikes"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_like_grey" />
            <TextView
                android:id="@+id/textViewLikes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="0 Me gustas"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>